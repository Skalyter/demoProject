<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="User ID:" />

    <TextView
        android:id="@+id/user_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_id"
        android:padding="4dp"
        android:layout_toEndOf="@id/user_id"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/post_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_id"
        android:padding="4dp"
        android:text="Post ID:" />

    <TextView
        android:id="@+id/post_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/post_id"
        android:padding="4dp"
        android:layout_toEndOf="@id/post_id"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_id"
        android:padding="4dp"
        android:text="Title:" />

    <TextView
        android:id="@+id/title_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/title"
        android:padding="4dp"
        android:layout_toEndOf="@id/title"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:padding="4dp"
        android:text="Body:" />

    <TextView
        android:id="@+id/text_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text"
        android:padding="4dp"
        android:layout_toEndOf="@id/user_id"
        android:textColor="@color/black" />
</RelativeLayout>